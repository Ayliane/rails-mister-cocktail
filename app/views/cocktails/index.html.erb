<h2 class="title"> Our cocktails </h2>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.image.path, width: 360, height: 175, crop: :fill %>');">
      <div class="card-description">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      </div>
      <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
      </div>
        </div>
    <% end %>
</div>
