<div class="media">
  <div class="media-body">
    <div class="media-section">
      <h2><%= @cocktail.name %><span><%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, id: "delete-btn" %></span></h2>
      <%= cl_image_tag @cocktail.image.path, width: 350, height: 250, crop: :fit %>
    </div>
  </div>
  <div class="media-aside">
    <div class="media-section">
      <h3>Ingredients</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= "#{dose.description} #{dose.ingredient.name} "%> | <%= link_to "Delete ingredient", dose_path(dose), method: :delete %></li>
        <% end %>
      </ul>
    </div>
    <div class="media-section">
      <h5>Add ingredients for <%= @cocktail.name %></h5>
      <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.input :description, placeholder: 'Quantity', label: false %>
      <%= f.association :ingredient, prompt: 'Chose your ingredient', label: false %>
      <%= f.submit "Add it!", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="media-section">
      <br>
      <br>
      <%= link_to icon("arrow-left"), cocktails_path, id: "back" %>
    </div>
  </div>
</div>
